{
  "name": "aditya-portfolio",
  "version": "1.0.0",
  "description": "Aditya's Portfolio Website",
  "scripts": {
    "dev": "concurrently \"npx tailwindcss -i ./tailwind.css -o ./styles.css --watch\" \"npx http-server . -p 3001\"",
    "build": "npx tailwindcss -i ./tailwind.css -o ./styles.css --minify",
    "vercel-build": "npx tailwindcss -i ./tailwind.css -o ./styles.css --minify",
    "start": "npx http-server . -p 3001",
    "css:watch": "npx tailwindcss -i ./tailwind.css -o ./styles.css --watch",
    "css:build": "npx tailwindcss -i ./tailwind.css -o ./styles.css --minify"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17",
    "concurrently": "^7.6.0",
    "http-server": "^14.1.1"
  }
}
